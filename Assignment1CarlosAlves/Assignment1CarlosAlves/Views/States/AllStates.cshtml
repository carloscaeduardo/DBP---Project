@model List<Assignment1CarlosAlves.Models.State>
@{
    ViewBag.Title = "AllStates";
}

<h2>All States</h2>

<table class="table table-striped table-hover table-dark table-bordered">
    <thead class="table-light">
        <tr>
            <th>State Code</th>
            <th>State Name</th>
            <th>First Zip Code </th>
            <th>Last Zip Code</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var state in Model)
        {
            <tr>
                <td>@state.StateCode</td>
                <td>@state.StateName</td>
                <td>@state.FirstZipCode</td>
                <td>@state.LastZipCode</td>
            </tr>
        }
    </tbody>
</table>

