@model List<Assignment1CarlosAlves.Models.Product>
@{
    ViewBag.Title = "AllProducts";
}

<h2>All Products</h2>

<table class="table table-striped table-hover table-dark table-bordered">
    <thead class="table-light">
        <tr>
            <th>Product Code</th>
            <th>Name</th>
            <th>Version</th>
            <th>Release Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductCode</td>
                    <td>@product.Name</td>
                    <td>@product.Version</td>
                    <td>@product.ReleaseDate</td>
                </tr>
            }
    </tbody>
</table>