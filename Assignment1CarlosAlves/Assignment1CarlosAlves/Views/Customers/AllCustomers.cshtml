@model List<Assignment1CarlosAlves.Models.Customer>
@{
    ViewBag.Title = "Index";
}



<h2>All Customers Page</h2>

<div class="row m-2">
    <div class="col-6">
        <input id ="textSearch" type="text" name="textSearch" onkeyup="search();" placeholder="Search..." />
    </div>
    <div class="col-6">
        <input type="button" class="btn btn-primary btn-md" name="searchButton" value="Search" onclick="search();" />
    </div>
</div>


<table class="sortable table table-striped table-hover table-dark table-bordered">
    <thead class="table-light">
        <tr>
            <th onclick="sort(0);">Customer ID</th>
            <th onclick="sort(1);">Customer Name</th>
            <th onclick="sort(2);">Customer Email</th>
            <th onclick="sort(3);">Customer State</th>
        </tr>
    </thead>
    <tbody>
        @* Lopp throuh the "allcustomers" list to display CustomerID and Customer Name *@
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerID</td>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>@customer.State1.StateName</td>
            </tr>
        }
    </tbody>
</table>

<script>
    function sort(sortBy) {
        let isDesc = false;

        var url_string = window.location.href;
        var url = new URL(url_string);
        var isDescUrlParam = url.searchParams.get("isDesc");
        if (isDescUrlParam == "false") {
            isDesc = true;
        }

        window.location.href = "/Customers/AllCustomers/?sortBy=" + sortBy + "&isDesc=" + isDesc;

    }

    function search() {
        // front end search
        var searchKey = $('#textSearch').val();
        console.log(searchKey);
        $('.sortable tbody tr').each(function () {
            var currentText = $(this).text();

            if (currentText.toLowerCase().indexOf(searchKey.toLowerCase()) == -1) {
                $(this).hide();
            } else {
                $(this).show();
            }
        });
    }

</script>